<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE checkstyle-metadata PUBLIC
"-//eclipse-cs//DTD Check Metadata 1.1//EN"
"http://eclipse-cs.sourceforge.net/dtds/checkstyle-metadata_1_1.dtd">
<checkstyle-metadata>
    <rule-group-metadata name="My custom checks"  priority="1600">
        <description>%MyCustomChecks.desc</description>

        <rule-metadata name="%SwissKnife.name" internal-name="SwissKnife" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.SwissKnifeCheck" />
            <description>%SwissKnife.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="2">
                <description>The maximum number of interfaces allowed.</description>
            </property-metadata>
        </rule-metadata>
        <rule-metadata name="%FeatureEnvy.name" internal-name="FeatureEnvy" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.FeatureEnvy" />
            <description>%FeatureEnvy.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="2">
                <description>The maximum number of foreign variables (objects) allowed.</description>
            </property-metadata>
        </rule-metadata>
        		<rule-metadata name="%TypeChecking.name" internal-name="TypeChecking" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.TypeChecking" />
            <description>%TypeChecking.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="2">
                <description>The maximum number of conditional statemsts.</description>
            </property-metadata>
        </rule-metadata>
              
    </rule-group-metadata>
</checkstyle-metadata>
