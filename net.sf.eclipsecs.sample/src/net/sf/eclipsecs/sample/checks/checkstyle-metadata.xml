<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE checkstyle-metadata PUBLIC
"-//eclipse-cs//DTD Check Metadata 1.1//EN"
"http://eclipse-cs.sourceforge.net/dtds/checkstyle-metadata_1_1.dtd">
<checkstyle-metadata>
    <rule-group-metadata name="My custom checks"  priority="1600">
        <description>%MyCustomChecks.desc</description>

        <rule-metadata name="%MethodLimit.name" internal-name="MethodLimit" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.MethodLimitCheck" />
            <description>%MethodLimit.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="2">
                <description>The maximum number of allowed methods.</description>
            </property-metadata>
            <quickfix classname="net.sf.eclipsecs.sample.checks.MethodLimitQuickfix" />
        </rule-metadata>

       
        <rule-metadata name="%Blob.name" internal-name="Blob" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.BlobCheck" />
            <description>%Blob.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="10">
                <description>The maximum number of allowed method_definitions, loops, variable_definitions and method_calls</description>
            </property-metadata>                
            <!--  <quickfix classname="net.sf.eclipsecs.sample.checks.BlobCheckQuickfix" /> -->
        </rule-metadata>
         
               <rule-metadata name="%RefusedBequest.name" internal-name="RefusedBequest" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.RefusedBequestCheck" />
            <description>%Blob.desc</description>
            <!-- property-metadata name="max" datatype="Integer" default-value="2">
                <description>The maximum number of methods of Refused Bequest</description>
            </property-metadata -->                
            <!--  <quickfix classname="net.sf.eclipsecs.sample.checks.BlobCheckQuickfix" /> -->
        </rule-metadata>               
              
    </rule-group-metadata>
</checkstyle-metadata>
