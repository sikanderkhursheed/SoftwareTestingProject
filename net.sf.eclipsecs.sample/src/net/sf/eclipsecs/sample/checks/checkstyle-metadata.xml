<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE checkstyle-metadata PUBLIC
"-//eclipse-cs//DTD Check Metadata 1.1//EN"
"http://eclipse-cs.sourceforge.net/dtds/checkstyle-metadata_1_1.dtd">
<checkstyle-metadata>
    <rule-group-metadata name="My custom checks"  priority="1600">
        <description>%MyCustomChecks.desc</description>

        <rule-metadata name="%SwissKnife.name" internal-name="SwissKnife" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.SwissKnifeCheck" />
            <description>%SwissKnife.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="2">
                <description>The maximum number of interfaces allowed.</description>
            </property-metadata>
        </rule-metadata>
       
        <rule-metadata name="%Blob.name" internal-name="Blob" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.BlobCheck" />
            <description>%Blob.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="10">
                <description>The maximum number of allowed method_definitions, loops, variable_definitions and method_calls</description>
            </property-metadata>                
            <!--  <quickfix classname="net.sf.eclipsecs.sample.checks.BlobCheckQuickfix" /> -->
        </rule-metadata>
         
               <rule-metadata name="%RefusedBequest.name" internal-name="RefusedBequest" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.RefusedBequestCheck" />
            <description>%Blob.desc</description>
            <!-- property-metadata name="max" datatype="Integer" default-value="2">
                <description>The maximum number of methods of Refused Bequest</description>
            </property-metadata -->                
            <!--  <quickfix classname="net.sf.eclipsecs.sample.checks.BlobCheckQuickfix" /> -->
        </rule-metadata>               

        <rule-metadata name="%FeatureEnvy.name" internal-name="FeatureEnvy" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.FeatureEnvy" />
            <description>%FeatureEnvy.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="2">
                <description>The maximum number of foreign variables (objects) allowed.</description>
            </property-metadata>
        </rule-metadata>
        <rule-metadata name="%TypeChecking.name" internal-name="TypeChecking" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.TypeChecking" />
            <description>%TypeChecking.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="2">
                <description>The maximum number of conditional statemsts.</description>
            </property-metadata>
        </rule-metadata>
        <rule-metadata name="%DuplicateCode.name" internal-name="DuplicateCodeCheck" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.DuplicateCodeCheck" />
            <description>%DuplicateCode.desc</description>
        </rule-metadata>
              
    </rule-group-metadata>
</checkstyle-metadata>
